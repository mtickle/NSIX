@model IEnumerable<NSIX.Models.SAR>



@{
    ViewBag.Title = "Manage Suspicious Activity Reports";
}

<h2>@ViewBag.Title</h2>

<p>
    @{if (Request.IsAuthenticated)
        {
            <input type="button" class="btn btn-default" value="Create New" onclick="location.href='@Url.Action("Create", "SAR")'" />
        }
    }
</p>


<table class="table table-striped">
    <tr>
        <th>
            Activity Date
        </th>
        <th>
            Activity Time
        </th>
        <th>
            Tip Class Type
        </th>
        <th>
            City
        </th>
        <th>
            State
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipClassCodeSimpleType.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateAbbrev)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SarID }) |
                @Html.ActionLink("Details", "Details", new { id = item.SarID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SarID })
            </td>
        </tr>
    }

</table>
