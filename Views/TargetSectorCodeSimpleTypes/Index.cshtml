@model IEnumerable<NSIX.Models.TargetSectorCodeSimpleType>

@{
    ViewBag.Title = "Target Sector Type Codes";
}

        <h2>@ViewBag.Title</h2>

        <p>
            @{if (Request.IsAuthenticated)
        {
            <input type="button" class="btn btn-default" value="Create New" onclick="location.href='@Url.Action("Create", "TargetSectorCodeSimpleTypes")'" />
        }
            }
        </p>

        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FacetValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FacetValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TargetSectorCodeSimpleTypeID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TargetSectorCodeSimpleTypeID })
                    </td>
                </tr>
            }

        </table>
