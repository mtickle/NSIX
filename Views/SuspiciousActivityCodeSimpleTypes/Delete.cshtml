@model NSIX.Models.SuspiciousActivityCodeSimpleType

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Suspicious Activity Type</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Facet Value
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FacetValue)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <input type="button" class="btn btn-default" value="Cancel" onclick="location.href='@Url.Action("", "SuspiciousActivityCodeSimpleTypes")'" />
        </div>
    }
</div>
